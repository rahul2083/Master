@using System.Security.Claims

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Master</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background: #f5f6f7;
            min-height: 100vh;
            margin: 0;
        }

        /* ===== TOP NAV BAR ===== */
        .top-nav {
            width: 100%;
            height: 58px;
            background: #ffffff;
            border-bottom: 1px solid #ddd;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 999;
            padding: 0 25px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

        .user-button {
            font-weight: 600;
            color: #0d6efd;
            font-size: 15px;
        }

        /* Page content padding so header doesn’t overlap */
        .page-content {
            padding: 85px 25px 25px 25px;
        }

        /* ===== Drawer Sidebar Animation ===== */
        .drawer-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.35);
            opacity: 0;
            visibility: hidden;
            transition: 0.3s;
            z-index: 998;
        }

            .drawer-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        #taskDrawer {
            width: 50%;
            max-width: 600px;
            position: fixed;
            top: 0;
            right: 0;
            height: 100vh;
            background: #fff;
            box-shadow: -4px 0 12px rgba(0,0,0,0.15);
            transform: translateX(100%);
            transition: transform .35s ease;
            z-index: 9999;
            padding: 25px;
            overflow-y: auto;
        }

            #taskDrawer.active {
                transform: translateX(0%);
            }
    </style>
</head>

<body>

    <!-- =================== TOP NAV BAR =================== -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <nav class="top-nav">

            <!-- Right Side: User Dropdown -->
            <div class="dropdown">
                <button class="btn user-button dropdown-toggle" data-bs-toggle="dropdown">
                    @User.FindFirst(ClaimTypes.Name)?.Value
                </button>

                <ul class="dropdown-menu dropdown-menu-end shadow-sm">

                    <!-- USER EMAIL -->
                    <li class="dropdown-item-text small text-muted">
                        @User.FindFirst(ClaimTypes.Email)?.Value
                    </li>

                    <li><hr /></li>

                    <!-- LOGOUT -->
                    <li>
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button class="dropdown-item text-danger fw-semibold">
                                Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>

        </nav>
    }

    <!-- =================== PAGE CONTENT =================== -->
    <div class="page-content">
        @RenderBody()
    </div>

    <!-- Drawer Overlay -->
    <div class="drawer-overlay" id="drawerOverlay" onclick="closeDrawer()"></div>

    <!-- Drawer Sidebar -->
    <div id="taskDrawer">
        <button class="btn-close float-end mb-3" onclick="closeDrawer()"></button>
        <div id="drawerBody"></div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        function openDrawer(url) {
            document.getElementById("taskDrawer").classList.add("active");
            document.getElementById("drawerOverlay").classList.add("active");

            $.get(url, function (html) {
                $("#drawerBody").html(html);
            });
        }

        function closeDrawer() {
            document.getElementById("taskDrawer").classList.remove("active");
            document.getElementById("drawerOverlay").classList.remove("active");
            $("#drawerBody").html("");
        }

        // AJAX Create/Edit Submit Handler
        $(document).on("submit", "form.ajax-form", function (e) {
            e.preventDefault();

            $.ajax({
                url: this.action,
                type: "POST",
                data: $(this).serialize(),
                success: function (res) {
                    if (res.success) {
                        location.reload(); // Refresh page after success
                    } else {
                        $("#drawerBody").html(res); // Re-render partial view
                    }
                }
            });
        });

        // Close drawer using ESC key
        document.addEventListener("keydown", function (e) {
            if (e.key === "Escape") {
                closeDrawer();
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

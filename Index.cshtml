@using System.Security.Claims
@using master.core.Enums
@model IEnumerable<master.core.Entities.TaskItem>
@using TaskStatus = master.core.Enums.TaskStatus;

@{
    bool isManager = User.IsInRole("Manager");
    int loggedUserId = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier)!.Value);
}

<style>
    /* SIDEBAR */
    .left-sidebar {
        width: 220px;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        background: rgba(255,255,255,0.7);
        backdrop-filter: blur(10px);
        padding-top: 80px;
        border-right: 1px solid rgba(0,0,0,0.15);
        z-index: 999;
    }

        .left-sidebar a {
            display: block;
            padding: 12px 18px;
            margin: 5px 12px;
            font-weight: 600;
            border-radius: 6px;
            color: #000;
            text-decoration: none;
            transition: .25s;
        }

            .left-sidebar a:hover,
            .left-sidebar a.active {
                background: #0d6efd;
                color: #fff;
            }

    .page-content-area {
        margin-left: 240px;
        padding: 25px;
    }
</style>

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="left-sidebar">
        <div class="text-center mb-3">
            <h4 class="fw-bold m-0">Master</h4>
            <hr style="margin:8px 15px; opacity:0.3;" />
        </div>

        <a asp-controller="Home" asp-action="Index">🏠 Home</a>
        <a asp-controller="Project" asp-action="Index">📁 Projects</a>
        <a asp-controller="Task" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]!.ToString() == "Task" ? "active" : "")">
            📝 Tasks
        </a>
        <a asp-controller="Home" asp-action="Privacy">🔒 Privacy</a>
        <a asp-controller="Home" asp-action="Help">❓ Help</a>
    </div>
}

<div class="page-content-area">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold"
            style="background: linear-gradient(90deg,#0d6efd,#6610f2);
                   -webkit-background-clip: text;
                   -webkit-text-fill-color: transparent;">
            <i class="bi bi-list-task"></i> Task List
        </h2>

        @if (isManager)
        {
            <button class="btn btn-success shadow-sm"
                    onclick="openDrawer('/Task/Create')">
                <i class="bi bi-plus-circle"></i> Add Task
            </button>
        }
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Project</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Assigned</th>
                        <th style="width: 230px; white-space:nowrap;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@t.Title</td>
                            <td>@t.Description</td>
                            <td><span class="badge bg-secondary">@t.ProjectName</span></td>

                            <td>
                                <span class="badge @(t.Priority == TaskPriority.High ? "bg-danger" : t.Priority == TaskPriority.Medium ? "bg-warning text-dark" : "bg-info")">
                                    @t.Priority
                                </span>
                            </td>

                            <td>
                                <span class="badge @(t.Status == TaskStatus.Done ? "bg-success" : t.Status == TaskStatus.InProgress ? "bg-primary" : "bg-secondary")">
                                    @t.Status
                                </span>
                            </td>

                            <td>
                                @(t.Assignee == null ?
                                                            Html.Raw("<span class='text-muted'>Not Assigned</span>") :
                                                            Html.Raw($"<span class='badge bg-info text-dark'><i class='bi bi-person-circle'></i> {t.Assignee.FullName}</span>")
                                                            )
                        </td>

                            <td>
                                <button class="btn btn-info btn-sm me-1"
                                        onclick="openDrawer('/Task/Detail/@t.Id')">
                                    <i class="bi bi-eye"></i>
                                </button>

                            @if (!isManager && t.AssigneeId == loggedUserId)
                                {
                                    <a href="/Subtask/Create?taskId=@t.Id"
                                       class="btn btn-primary btn-sm me-1">
                                        <i class="bi bi-plus-lg"></i>
                                    </a>
                                }

                                @if (isManager)
                                {
                                    <button class="btn btn-warning btn-sm me-1"
                                            onclick="openDrawer('/Task/Edit/@t.Id')">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    <button class="btn btn-danger btn-sm"
                                            onclick="openDrawer('/Task/Delete/@t.Id')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

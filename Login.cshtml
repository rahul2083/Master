@model Master.Controllers.AccountController.LoginVm

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
    }

    /* FULLSCREEN BACKGROUND */
    body {
      
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center; /* ⭐ TRUE CENTERING */
    }

    /* GLASS CARD */
    .glass-card {
        width: 420px;
        background: rgba(12, 10, 9 );
        backdrop-filter: blur(12px);
        border-radius: 16px;
        border: 1px solid rgba(12, 10, 9 );
        padding: 30px 25px;
        box-shadow: 0px 8px 25px rgba(0,0,0,0.2);
    }

    .text-shadow {
        text-shadow: 1px 1px 4px rgba(0,0,0,0.7);
    }

    label {
        color: white;
        font-weight: 600;
    }
</style>

<div class="glass-card">

    <h2 class="text-center text-white fw-bold text-shadow mb-4">Login</h2>

    <form method="post">

        <!-- ROLE -->
        <div class="mb-3">
            <label>Select Role</label>
            <div class="input-group">
                <span class="input-group-text bg-white">
                    <i class="bi bi-person-badge"></i>
                </span>
                <select asp-for="Role" class="form-select">
                    <option value="Manager">Manager</option>
                    <option value="User">User</option>
                </select>
            </div>
        </div>

        <!-- EMAIL -->
        <div class="mb-3">
            <label>Email Address</label>
            <div class="input-group">
                <span class="input-group-text bg-white">
                    <i class="bi bi-envelope"></i>
                </span>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
            </div>
        </div>

        <!-- PASSWORD -->
        <div class="mb-3">
            <label>Password</label>
            <div class="input-group">
                <span class="input-group-text bg-white">
                    <i class="bi bi-lock"></i>
                </span>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
            </div>
        </div>

        <button class="btn btn-primary w-100 fw-semibold mb-3" style="padding: 10px;">
            Login
        </button>

        <div class="text-center">
            <span class="text-white">Don't have an account?</span>
            <a href="/Account/Register" class="fw-bold text-warning">Create Account</a>
        </div>

    </form>

    <!-- ERROR MESSAGES -->
    <div class="mt-3">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="text-danger small bg-light p-2 rounded">@err.ErrorMessage</div>
        }
    </div>

</div>

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

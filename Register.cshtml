@model Master.Controllers.AccountController.RegisterVm

<!-- Fullscreen Background + No Scroll -->
<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden; /* 🚫 Disable scrolling */
        font-family: 'Segoe UI', sans-serif;
    }

    body {
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center; /* ⭐ TRUE CENTERING */
    }

    .glass-card {
        background: rgba(12, 10, 9);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        border: 1px solid rgba(12, 10, 9);
        padding-top: 10px;
    }

    .register-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }
</style>

<div class="register-container">
    <div class="card glass-card shadow-lg" style="width: 450px;">

        <!-- FORM BODY -->
        <div class="card-body p-4">
            <h2 class="text-center text-white fw-bold text-shadow mb-4">Register</h2>


            <form method="post">

                <!-- FULL NAME -->
                <div class="mb-3">
                    <label class="form-label fw-semibold text-white">Full Name</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-person"></i>
                        </span>
                        <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                    </div>
                </div>

                <!-- EMAIL -->
                <div class="mb-3">
                    <label class="form-label fw-semibold text-white">Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" />
                    </div>
                </div>

                <!-- PASSWORD -->
                <div class="mb-3">
                    <label class="form-label fw-semibold text-white">Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                    </div>
                </div>

                <!-- ROLE -->
                <div class="mb-3">
                    <label class="form-label fw-semibold text-white">Select Role</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-people"></i>
                        </span>
                        <select asp-for="Role" class="form-select">
                            <option value="Manager">Manager</option>
                            <option value="User">User</option>
                        </select>
                    </div>
                </div>

                <!-- REGISTER BUTTON -->
                <button class="btn btn-primary w-100 fw-semibold mb-3" style="padding: 10px;">
                    Register
                </button>

                <!-- LOGIN LINK -->
                <div class="text-center">
                    <span class="text-white">Already have an account?</span>
                    <a href="/Account/Login" class="fw-bold text-warning" style="text-decoration: none;">
                        Login Here
                    </a>
                </div>
            </form>

            <!-- ERROR MESSAGES -->
            <div class="mt-3">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div class="text-danger small bg-light p-2 rounded">@error.ErrorMessage</div>
                }
            </div>

        </div>
    </div>
</div>

<!-- BOOTSTRAP ICONS -->
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

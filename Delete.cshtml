@model master.core.Entities.TaskItem
@{
    ViewData["Title"] = "Delete Task";
}
<div class="container py-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h4 class="mb-3">Confirm delete</h4>
            <p class="text-muted">Are you sure you want to delete this task? This action cannot be undone.</p>

            <div class="row g-3 small">
                <div class="col-12 col-md-6">
                    <div class="border rounded p-3 h-100">
                        <div class="mb-2"><strong>Title:</strong> @Model.Title</div>
                        <div class="mb-2"><strong>Description:</strong> @Model.Description</div>
                        <div class="mb-2"><strong>Status:</strong> @Model.Status</div>
                        <div class="mb-2"><strong>Priority:</strong> @Model.Priority</div>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="border rounded p-3 h-100">
                        <div class="mb-2"><strong>Assignee:</strong> @(Model.Assignee?.FullName ?? "Unassigned")</div>
                        <div class="mb-2"><strong>Start:</strong> @Model.StartDate?.ToString("yyyy-MM-dd")</div>
                        <div class="mb-2"><strong>Due:</strong> @Model.DueDate?.ToString("yyyy-MM-dd")</div>
                        <div class="mb-2"><strong>Subtasks:</strong> @(Model.Subtasks?.Count ?? 0)</div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <form asp-controller="Task" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <a class="btn btn-secondary" asp-controller="Task" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</div>
